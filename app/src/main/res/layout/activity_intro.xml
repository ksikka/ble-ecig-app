<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ecig.app.Intro"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/editDoneButton" />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/numericalTable">
            <TableRow
                style="@style/cartridgeRow">
                <TextView style="@style/cartridgeHeader"
                    android:text="Cartridge" />
                <TextView
                    style="@style/cartridgeHeader"
                    android:text="Percent" />
            </TableRow>
            <TableRow
                style="@style/cartridgeRow">
                <TextView style="@style/cartridgeLabel"/>
                <EditText style="@style/cartridgeValue" />
            </TableRow>
            <TableRow
                style="@style/cartridgeRow">
                <TextView style="@style/cartridgeLabel"/>
                <EditText style="@style/cartridgeValue" />
            </TableRow>
            <TableRow
                style="@style/cartridgeRow">
                <TextView style="@style/cartridgeLabel"/>
                <EditText style="@style/cartridgeValue" />
            </TableRow>
            <TableRow
                style="@style/cartridgeRow">
                <TextView style="@style/cartridgeLabel"/>
                <EditText style="@style/cartridgeValue" />
            </TableRow>
            <TableRow
                style="@style/cartridgeRow">
                <TextView style="@style/cartridgeLabel"/>
                <EditText style="@style/cartridgeValue" />
            </TableRow>
            <TableRow
                style="@style/cartridgeRow">
                <TextView style="@style/cartridgeLabel"/>
                <EditText style="@style/cartridgeValue" />
            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Embre"
            android:id="@+id/reconfButton" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:autoText="false"
                android:editable="false" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/connectingButton" />
        </LinearLayout>
    </LinearLayout>



